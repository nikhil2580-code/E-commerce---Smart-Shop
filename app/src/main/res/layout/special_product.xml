<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    android:background="@color/cardview_dark_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageSpecilaProduct"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/product_img"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvSpecialProductName"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Scotch Premium"
            android:lines="2"
            app:layout_constraintStart_toEndOf="@id/imageSpecilaProduct"
            app:layout_constraintTop_toTopOf="@id/imageSpecilaProduct"
            android:layout_marginTop="7dp"
            android:layout_marginStart="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tvSpecialProductPrice"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="$1600"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="@id/tvSpecialProductName"
            app:layout_constraintTop_toBottomOf="@id/tvSpecialProductName" />

        <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/btn_add_cart"
            android:layout_width="77dp"
            android:layout_height="35dp"
            android:text="Add to cart"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:background="@color/g_blue"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSpecialProductPrice"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"/>
















    </androidx.constraintlayout.widget.ConstraintLayout>








</androidx.cardview.widget.CardView>
